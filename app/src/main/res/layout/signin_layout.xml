<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/image_backgroud_signin"
    tools:context=".SignIn_Activity">

    <TextView
        android:id="@+id/text_welcome1"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:text="Chào mừng bạn\n đến với\nMy Tasks App"
        android:textSize="28dp" />

    <EditText
        android:id="@+id/edit_username"
        android:textColor="@color/colorBlack"
        android:background="@drawable/selector_edittext"
        android:layout_width="260dp"
        android:layout_height="36dp"
        android:layout_below="@+id/text_welcome1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:paddingHorizontal="10dp"
        android:hint="Tên đăng nhập"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_action_name"/>

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="260dp"
        android:layout_height="36dp"
        android:layout_below="@+id/edit_username"
        android:background="@drawable/selector_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_action_pass"
        android:hint="Mật khẩu"
        android:paddingHorizontal="10dp"
        android:inputType="textPassword"
        android:textColor="@color/colorBlack" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edit_password"
        android:padding="5dp"
        android:text="Remember me"
        android:textSize="20dp"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="250dp"
        android:layout_marginTop="15dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@+id/checkBox"
        android:background="@drawable/button_rectangle"
        android:text="Đăng nhập"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_welcome2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_signin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="Đăng nhập bằng tài khoản Microsoft hoặc tài khoản cơ quan."
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_below="@+id/text_welcome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/line"
        android:layout_width="280dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/sign_in_button"
        android:layout_centerHorizontal="true"
        android:background="@color/colorWhite" />

    <TextView
        android:id="@+id/text_welcome3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Bạn chưa có tài khoản ?"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text_register"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_welcome3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/sign_up"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/text_rectangle"
        android:textStyle="bold"
        android:textSize="15sp"/>


</RelativeLayout>
