<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@color/colorBlack">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/text_welcome1"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:text="Tạo tài khoản"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/text_welcome1"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"/>

    <EditText
        android:id="@+id/edit_username"
        android:textColor="@color/colorBlack"
        android:background="@color/colorWhite"
        android:layout_width="260dp"
        android:layout_height="36dp"
        android:layout_below="@+id/image_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="ai_do@example.com"
        android:paddingLeft="10dp"/>


    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_logo"
        android:layout_alignStart="@+id/edit_username"
        android:layout_alignLeft="@+id/edit_username"
        android:layout_marginTop="15dp"
        android:text="Tên đăng nhập"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="260dp"
        android:layout_height="36dp"
        android:layout_below="@+id/edit_username"
        android:background="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:hint="Tạo mật khẩu"
        android:paddingHorizontal="10dp"
        android:inputType="textPassword"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_username"
        android:layout_alignStart="@+id/edit_password"
        android:layout_alignLeft="@+id/edit_password"
        android:layout_marginTop="15dp"
        android:text="Mật khẩu"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_password_again"
        android:layout_width="260dp"
        android:layout_height="36dp"
        android:layout_below="@+id/edit_password"
        android:background="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:hint="Nhập lại mật khẩu"
        android:paddingHorizontal="10dp"
        android:inputType="textPassword"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/password_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_password"
        android:layout_alignStart="@+id/edit_password_again"
        android:layout_alignLeft="@+id/edit_password_again"
        android:layout_marginTop="15dp"
        android:text="Nhập lại mật khẩu"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />
    <Button
        android:id="@+id/btn_login"
        android:layout_width="260dp"
        android:layout_marginTop="20dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@+id/edit_password_again"
        android:background="@drawable/button_rectangle"
        android:text="Đăng kí"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</RelativeLayout>